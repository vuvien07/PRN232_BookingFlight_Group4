        body {
            background: #f8f9fa;
            position: relative;
            padding-top: 69px;
        }

        .container {
            max-width: 1200px;
            margin: 0 auto;
        }

        .banner {
            position: relative;
            width: 100%;
            background: #fff;
        }

            .banner img {
                height: 440px;
                margin-top: -70px;
                width: 100%;
                object-fit: cover;
            }

        .promotion-section {
            margin-top: 50px;
        }

        .promo-card img {
            width: 100%;
        }

        /*Event Slideshow*/

        .event-slideshow {
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            width: 70%;
            max-width: 1100px;
            padding: 0;
            border-radius: 10px;
            overflow: hidden;
            box-shadow: 0 0 20px rgba(0, 0, 0, 0.1);
        }


        .event-wrapper {
            position: relative;
            width: 100%;
            height: 300px;
            overflow: hidden;
            border-radius: 0;
        }


        .event-slide {
            position: absolute;
            width: 100%;
            height: 100%;
            opacity: 0;
            transition: opacity 0.5s ease-in-out;
        }


            .event-slide.active {
                opacity: 1;
            }


            .event-slide img {
                width: 100%;
                height: 100%;
                object-fit: fill;
                display: block;
            }

        /* Navigation buttons */
        .slide-btn {
            position: absolute;
            top: 50%;
            transform: translateY(-50%);
            background: rgba(0, 0, 0, 0.5);
            color: white;
            padding: 12px 18px;
            font-size: 18px;
            border: none;
            cursor: pointer;
            border-radius: 50%;
            transition: background 0.3s;
            z-index: 10;
        }

            .slide-btn:hover {
                background: rgba(0, 0, 0, 0.8);
            }

        .prev {
            left: 10px;
        }


        .next {
            right: 10px;
        }

        /* Dots */
        .dot-container {
            position: absolute;
            bottom: 15px;
            left: 0;
            right: 0;
            text-align: center;
            z-index: 10;
        }

        .dot {
            height: 10px;
            width: 10px;
            margin: 0 5px;
            background-color: #bbb;
            border-radius: 50%;
            display: inline-block;
            cursor: pointer;
            transition: background-color 0.3s;
        }

            .dot.active {
                background-color: #006994;
            }

    </style>
