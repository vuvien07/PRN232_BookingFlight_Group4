    <script>
           document.addEventListener('DOMContentLoaded', function () {
            const departureDate = document.getElementById('departureSelectPlace');
            const arrivalDate = document.getElementById('arrivalSelectPlace');

            arrivalDate.options[0].disabled = true;
            arrivalDate.options[1].selected = true;

            departureDate.addEventListener('change', function () {
                updateArrivalOptions();
            });
            arrivalDate.addEventListener('change', function () {
                updateDepartureOptions();
            });

            function updateArrivalOptions() {
                const selectedDeparture = departureDate.value;
                Array.from(arrivalDate.options).forEach(option => {
                    option.disabled = option.value === selectedDeparture && option.value !== '';
                });
            }

            // Hàm cập nhật options cho điểm đi
            function updateDepartureOptions() {
                const selectedArrival = arrivalDate.value;
                Array.from(departureDate.options).forEach(option => {
                    option.disabled = option.value === selectedArrival && option.value !== '';
                });
            }
        });
        $(document).ready(function () {
            $(document).on('change', 'input[name="Adult"], input[name="Child"], input[name="Baby"]', function () {
                let Adult = $("input[name='Adult']").val();
                let Child = $("input[name='Child']").val();
                let Baby = $("input[name='Baby']").val();
                if(Adult === ""){
                    $("input[name='Adult']").val(0);
                }
                if(Child === ""){
                    $("input[name='Child']").val(0);
                }
                if(Baby === ""){
                    $("input[name='Baby']").val(0);
                }
            });
        });

        function submitFlightForm(event) {
            event.preventDefault();
            let Adult = $("input[name='Adult']").val();
            let Child = $("input[name='Child']").val();
            let Baby = $("input[name='Baby']").val();
            if (parseInt(Adult) + parseInt(Child) + parseInt(Baby) > 9) {
                Swal.fire({
                    title: "Error",
                    text: "Tối đa 9 người!",
                    icon: "error",
                    timer: 1000,
                    showConfirmButton: false
                });
                return;
            }
            $("#searchFlightForm").submit();
        }
    </script>

    <partial name="~/Views/Common/_Footer.cshtml" />
</body>
</html>