@{
    ViewData["Title"] = "Service Details";
    Layout = "~/Views/Shared/_ManagerLayout.cshtml";
}

<link rel="stylesheet" href="~/css/service-details.css" />

<div class="service-details-container">
    <!-- Header -->
    <div class="details-header">
        <div class="d-flex justify-content-between align-items-center">
            <div class="d-flex align-items-center">
                <button class="btn btn-outline-secondary me-3" onclick="goBack()">
                    <i class="fas fa-arrow-left"></i> Back
                </button>
                <div>
                    <h2 class="mb-0" id="serviceTitle">Service Details</h2>
                    <small class="text-muted">Service ID: <span id="serviceId">-</span></small>
                </div>
            </div>
            <div class="d-flex gap-2">
                <button class="btn btn-primary" onclick="openEditModal()">
                    <i class="fas fa-edit"></i> Edit Service
                </button>
                <button class="btn btn-danger" onclick="deleteService()">
                    <i class="fas fa-trash"></i> Delete
                </button>
            </div>
        </div>
    </div>

    <!-- Service Info Card -->
    <div class="row">
        <div class="col-lg-8">
            <div class="card service-info-card">
                <div class="card-header">
                    <h5 class="mb-0">
                        <i class="fas fa-info-circle text-primary me-2"></i>
                        Service Information
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row mb-3">
                        <div class="col-sm-3">
                            <strong>Service Name:</strong>
                        </div>
                        <div class="col-sm-9">
                            <span id="serviceName">-</span>
                        </div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-sm-3">
                            <strong>Status:</strong>
                        </div>
                        <div class="col-sm-9">
                            <span id="serviceStatus" class="badge">-</span>
                        </div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-sm-3">
                            <strong>Manager:</strong>
                        </div>
                        <div class="col-sm-9">
                            <span id="managerName">-</span>
                        </div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-sm-3">
                            <strong>Flight Count:</strong>
                        </div>
                        <div class="col-sm-9">
                            <span id="flightCount">-</span>
                        </div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-sm-3">
                            <strong>Description:</strong>
                        </div>
                        <div class="col-sm-9">
                            <p id="serviceDetail" class="mb-0">-</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-4">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">
                        <i class="fas fa-chart-bar text-success me-2"></i>
                        Quick Stats
                    </h5>
                </div>
                <div class="card-body">
                    <div class="stat-item">
                        <div class="stat-icon">
                            <i class="fas fa-box"></i>
                        </div>
                        <div class="stat-info">
                            <h4 id="itemCount">0</h4>
                            <span>Items</span>
                        </div>
                    </div>
                    <div class="stat-item">
                        <div class="stat-icon">
                            <i class="fas fa-plane"></i>
                        </div>
                        <div class="stat-info">
                            <h4 id="flightCountStat">0</h4>
                            <span>Flights</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Items Section -->
    <div class="card mt-4">
        <div class="card-header">
            <div class="d-flex justify-content-between align-items-center">
                <h5 class="mb-0">
                    <i class="fas fa-box text-warning me-2"></i>
                    Service Items
                </h5>
                <button class="btn btn-sm btn-outline-primary" onclick="addNewItem()">
                    <i class="fas fa-plus"></i> Add Item
                </button>
            </div>
        </div>
        <div class="card-body">
            <div class="row" id="itemsList">
                <!-- Items will be loaded here -->
            </div>
        </div>
    </div>
</div>

<!-- Edit Service Modal -->
<div class="modal fade" id="editServiceModal" tabindex="-1" aria-labelledby="editServiceModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="editServiceModalLabel">Edit Service</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="editServiceForm">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label for="editServiceName" class="form-label">Service Name *</label>
                                <input type="text" class="form-control" id="editServiceName" required>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label for="editServiceStatus" class="form-label">Status</label>
                                <select class="form-select" id="editServiceStatus">
                                    <!-- Options will be loaded dynamically -->
                                </select>
                            </div>
                        </div>
                    </div>
                    <div class="mb-3">
                        <label for="editServiceDetail" class="form-label">Description</label>
                        <textarea class="form-control" id="editServiceDetail" rows="3"></textarea>
                    </div>
                    
                    <!-- Items Section -->
                    <h6>Items Management</h6>
                    <div class="items-management">
                        <div class="d-flex justify-content-between align-items-center mb-3">
                            <small class="text-muted">Manage items associated with this service</small>
                            <button type="button" class="btn btn-sm btn-outline-success" onclick="addNewItemToForm()">
                                <i class="fas fa-plus"></i> Add New Item
                            </button>
                        </div>
                        <div id="editItemsList">
                            <!-- Items will be loaded here -->
                        </div>
                        <div id="newItemsList">
                            <!-- New items will be added here -->
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-primary" onclick="saveService()">Save Changes</button>
            </div>
        </div>
    </div>
</div>

<script src="~/js/api-config.js"></script>
<script src="~/js/service-details.js"></script>
