var responseAccountDTO = accounts.Select(a => new ResponseAccountDTO
{
    AccountId = a.AccountId,
    Username = a.Username,
    Fullname = a.Manager?.Fullname ?? a.Customer?.Fullname ?? a.Admin?.Fullname ?? "",
    Address = a.Manager?.Address ?? a.Customer?.Address ?? a.Admin?.Address ?? "",
    PhoneNumber = a.Manager?.PhoneNumber ?? a.Customer?.PhoneNumber ?? a.Admin?.PhoneNumber ?? "",
    Email = a.Manager?.Email ?? a.Customer?.Email ?? a.Admin?.Email ?? "",
    Role = a.Role?.RoleName ?? "",
    Status = a.Status?.StatusName ?? ""
}).ToList(); 

var accounts = await bookingFlightContext.Accounts
    .Include(a => a.Role)
    .Include(a => a.Status)
    .Include(a => a.Manager)
    .Include(a => a.Customer)
    .Include(a => a.Admin)
    .ToListAsync(); 