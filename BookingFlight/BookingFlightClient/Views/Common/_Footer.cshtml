    </footer>    <script>
        // Newsletter subscription
        document.querySelector('.newsletter-btn').addEventListener('click', function() {
            const email = document.querySelector('.newsletter-input').value;
            if (email) {
                // Get current language for messages
                const currentLang = window.LanguageUtils ? window.LanguageUtils.getCurrentLanguage() : 'vn';
                let message;
                if (currentLang === 'vn') {
                    message = 'Cảm ơn bạn đã đăng ký nhận tin khuyến mãi!';
                } else if (currentLang === 'en') {
                    message = 'Thank you for subscribing to our promotions!';
                } else if (currentLang === 'zh') {
                    message = '感谢您订阅我们的促销信息！';
                }
                alert(message);
                document.querySelector('.newsletter-input').value = '';
            } else {
                const currentLang = window.LanguageUtils ? window.LanguageUtils.getCurrentLanguage() : 'vn';
                let message;
                if (currentLang === 'vn') {
                    message = 'Vui lòng nhập email hợp lệ!';
                } else if (currentLang === 'en') {
                    message = 'Please enter a valid email!';
                } else if (currentLang === 'zh') {
                    message = '请输入有效的邮箱地址！';
                }
                alert(message);
            }
        });

        // Smooth scroll for internal links
        document.querySelectorAll('.footer-links a[href^="/"]').forEach(link => {
            link.addEventListener('click', function(e) {
                // Add smooth transition effect
                this.style.transform = 'scale(0.95)';
                setTimeout(() => {
                    this.style.transform = 'scale(1)';
                }, 150);
            });
        });

        // Initialize language switching for footer
        document.addEventListener('DOMContentLoaded', function() {
            // If LanguageUtils is available, apply current language to footer
            if (window.LanguageUtils) {
                const currentLang = window.LanguageUtils.getCurrentLanguage();
                // Apply current language settings
                window.LanguageUtils.switchLanguage(currentLang);
            }
        });
