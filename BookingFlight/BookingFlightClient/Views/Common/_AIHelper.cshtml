    <title>Đặt khám AI</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        #chatBox {
          height: 300px;
          overflow-y: auto;
          border: 1px solid #ddd;
          padding: 10px;
          background-color: #f9f9f9;
        }
        .ai, .user {
          margin: 5px 0;
        }
        .ai { color: blue; }
        .user { color: green; text-align: right; }
