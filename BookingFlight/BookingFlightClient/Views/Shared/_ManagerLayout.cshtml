<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - Manager Dashboard</title>
    
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Font Awesome -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <!-- Manager Custom CSS -->
    <link href="~/css/manager-dashboard.css" rel="stylesheet">
    <link href="~/css/manager-sidebar.css" rel="stylesheet">
</head>
<body>
    <div class="manager-wrapper">
        <!-- Sidebar -->
        @await Html.PartialAsync("_ManagerSidebar")
        
        <!-- Main Content -->
        <main class="manager-content">
            <!-- Top Header -->
            <header class="manager-header">
                <div class="header-left">
                    <button class="mobile-sidebar-toggle" onclick="toggleSidebar()">
                        <i class="fas fa-bars"></i>
                    </button>
                    <h1 class="page-title">@ViewData["Title"]</h1>
                </div>
                
                <div class="header-right">
                    <div class="notifications">
                        <button class="notification-btn">
                            <i class="fas fa-bell"></i>
                            <span class="notification-badge">3</span>
                        </button>
                    </div>
                    
                    <div class="user-menu">
                        <button class="user-menu-btn" onclick="toggleUserMenu()">
                            <i class="fas fa-user-circle"></i>
                            <span>@(ViewBag.UserRole == 4 ? "Manager" : ViewBag.UserRole == 2 ? "Supporter" : "User")</span>
                            <i class="fas fa-chevron-down"></i>
                        </button>
                        <div class="user-dropdown" id="userDropdown">
                            <a href="/Manager/Profile">
                                <i class="fas fa-user"></i> Profile
                            </a>
                            <a href="#" onclick="logout()">
                                <i class="fas fa-sign-out-alt"></i> Logout
                            </a>
                        </div>
                    </div>
                </div>
            </header>
            
            <!-- Page Content -->
            <div class="page-content">
                @RenderBody()
            </div>
        </main>
    </div>
    
    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/manager-sidebar.js"></script>
    <script src="~/js/manager-dashboard.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
